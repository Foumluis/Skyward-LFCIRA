/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "agentemain",
	"main": "src/index.ts", // Tu archivo usa .ts, así que asegúrate que tu index.js sea .ts
	"compatibility_date": "2025-10-24",
	"compatibility_flags": ["nodejs_compat"],
	"assets": {
		"binding": "ASSETS",
		"directory": "./public"
	},
	"observability": {
		"enabled": true
	},
	"d1_databases": [
		{
			"binding": "base_de_usuarios",
			"database_name": "base_de_usuarios",
			"database_id": "25530129-841f-49cb-992f-44f9b9ecaf2a"
		}
		// Se eliminó la coma extra que estaba aquí
	],
	"ai": {
		"binding": "AI"
		// Se movió el comentario que estaba aquí y rompía el JSON
	},

	// --- ¡AQUÍ ESTÁ LO NUEVO! ---
	// Este es el binding para el navegador que necesitas
	"browser": {
		"binding": "MY_BROWSER"
	},
	// --- FIN DE LO NUEVO ---

	"vars": {
		"PUPPETEER_API_URL": "http://localhost:3001/agendar"
	},
	"dev": {
		"port": 8787
	}
}